// Sidebar
.sidebar
	&--section
		border-radius 3px
		box-shadow(0px 0px 0px 5px $verde_claro inset)
		margin-top 2px
		&-header
			border-radius 3px 3px 0 0
			background $verde_claro
			padding 0.5em
			h3
				color $blanco
				font-weight ligther
				letter-spacing 0.5em
				margin 0
				padding 0
				text-transform uppercase
		&-contenido
			background $verde_claro
			border-radius 3px

@media all and (min-width: 980px)
	.sidebar
		display table-cell
		max-width 250px
		min-width 250px
		padding-top 0
		vertical-align top
		width 250px
		.second_nav
			display block

@media all and (max-width: 979px)
	.sidebar--banner
		display none