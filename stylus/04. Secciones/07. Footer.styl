// Footer
.copyright
	font-size 0.8em
	word-wrap break-word

.footer
	background $verde_claro
	background url("data:image/svg+xml;base64,")
	background radial-gradient(ellipse at top, $verde_claro 0%, $verde_oscuro 100%)
	background -moz-radial-gradient(top, ellipse cover, $verde_claro 0%, $verde_oscuro 100%)
	background -webkit-radial-gradient(top, ellipse cover, $verde_claro 0%, $verde_oscuro 100%)
	filter unquote("progid:DXImageTransform.Microsoft.gradient( startColorstr='#006553', endColorstr='#014035',GradientType=1 )")
	padding 0.5em
	*
		color $blanco
.mail
	font-size 0.6em
	a
		text-decoration none

.redes_sociales
	ul
		padding 0
		margin 0
		li
			list-style none
			display inline-block
			a
				font-size 2em
				text-decoration none
				padding 0.2em