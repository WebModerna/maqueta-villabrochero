// Formularios lo m√°s completo que se pueda.

fieldset
	border-color $silver_claro
	border-radius 3px

legend
	padding-left 1em
	padding-right 1em

form
	margin-bottom 1em
	text-align left
	width 100%

input[type="date"]
input[type="email"]
input[type="number"]
input[type="tel"]
input[type="text"]
input[type="url"]
input[type="search"]
textarea
select
	background-color $verde_claro
	border 1px solid $gris
	border-radius 0.25em
	color $blanco_puro
	display inline-block
	height 2em
	line-height 1.5em
	margin-bottom 0.5em
	padding 0.25em 0.5em
	outline none
	transition all 0.1s ease-in-out
	vertical-align middle


textarea
	min-height 180px
	resize none

$placeholder =
	color $gris

placeholder("", $placeholder)


.formulario--propiedades
	label
		float left
	&-form
		padding 5px 10px
		label
			width 40%
		input
		select
			width 60%

.formulario
	label
		float left
		padding-right 1em
	input
	select
	textarea
		width 100%

.formulario--producto
	height 0
	opacity 0
	visibility hidden
	transition_comun()
	div
		margin auto
		overflow hidden
		input
		select
		textarea
			float right
			width 100%
		span
			float right

.imagen-captcha
	display inline-block
	vertical-align top
	width auto !important

#captcha
	display inline-block
	height 30px
	vertical-align top
	width 100px

#check
	display none

#check:checked ~ .formulario--producto
	height auto
	opacity 1
	visibility visible

#label-check
	float none
	display inline-block
	margin-left calc(50% - 123px)
	margin-left -o-calc(50% - 123px)
	margin-left -ms-calc(50% - 123px)
	margin-left -moz-calc(50% - 123px)
	margin-left -webkit-calc(50% - 123px)
	margin-left expression(50% - 123px)

@media all and (max-width:400px)
	.formulario--propiedades
		&-form
			font-size 0.9em

@media all and (max-width:980px)
	.formulario--propiedades
		display none

@media all and (min-width:720px)
	.formulario
		div
			overflow hidden
			margin auto
			width 80%
			input
			select
			textarea
				float right
				width 50%
			span
				float right
	.imagen-captcha
		margin-right 0.5em

@media all and (min-width:980px)
	.formulario--propiedades
		background-color $blanco_puro
		&-form
			font-size 0.8em